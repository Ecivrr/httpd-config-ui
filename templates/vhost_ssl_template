<VirtualHost *:443>
    ServerAdmin _ADMINEMAIL_
    ServerName _DOMAIN_
    ServerAlias www._DOMAIN_

    SSLEngine on
    SSLCertificateFile /etc/httpd/ssl/_DOMAIN_.crt
    SSLCertificateKeyFile /etc/httpd/ssl/_DOMAIN_.key

    DocumentRoot /var/www/vhost/_DOMAIN_/docroot
    DirectoryIndex index.php index.html

    AddDefaultCharset UTF-8
    HostnameLookups Off

    <Directory /var/www/vhost/_DOMAIN_>
        AllowOverride none

        Order allow,deny
        Allow from 127.0.0.1
    </Directory>

    <Directory /var/www/vhost/_DOMAIN_/docroot>
        Options -FollowSymlinks +SymlinksIfOwnerMatch
        AllowOverride all

        Order allow,deny
        Allow from all
    </Directory>
</VirtualHost>